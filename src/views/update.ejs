<body style="padding: 0 1rem;">
    <%- include('../views/adminnav.ejs', {active: "db"}) %>
    <form action="/updateTHUOC" method="post" style="margin-top: 80px;">
        <center><h1>Chỉnh sửa thông tin thuốc</h1></center>
        <div class="w-75" style="margin: 0 auto;">
            <div class="row mb-2">
                <div class="form-group col-md-4">
                    <label class="text-success" for="MATHUOC">Mã thuốc</label>
                    <input class="form-control" type="text" name="MATHUOC" value="<%= THUOC.MATHUOC %>">
                </div>
                <div class="form-group col-md-4">
                    <label class="text-success" for="TENTHUOC">Tên thuốc</label>
                    <input class="form-control" type="text" name="TENTHUOC" value="<%= THUOC.TENTHUOC %>">
                </div>
                <div class="form-group col-md-4">
                    <label class="text-success" for="MANHOM">Mã nhóm</label>
                    <input class="form-control" type="text" name="MANHOM" value="<%= THUOC.MANHOM %>">
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <label class="text-success" for="LOAISD">Loài sử dụng</label>
                    <input class="form-control" type="text" name="LOAISD" value="<%= THUOC.LOAISD %>">
                </div>
                <div class="col-md-6">
                    <label class="text-success" for="THANHPHAN">Thành phần</label>
                    <input class="form-control" type="text" name="THANHPHAN" value="<%= THUOC.THANHPHAN %>">
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="text-success" for="MANCC">Mã nhà cung cấp</label>
                    <input class="form-control" type="text" name="MANCC" value="<%= THUOC.MANCC %>">
                </div>
                <div class="col-md-3">
                    <label class="text-success" for="GIASI">Giá sỉ</label>
                    <input class="form-control" type="text" name="GIASI" value="<%= THUOC.GIASI %>">
                </div>
                <div class="col-md-3">
                    <label class="text-success" for="GIALE">Giá lẻ</label>
                    <input class="form-control" type="text" name="GIALE" value="<%= THUOC.GIALE %>">
                </div>
                <div class="col-md-3">
                    <label class="text-success" for="GIANHAP">Giá nhập</label>
                    <input class="form-control" type="text" name="GIANHAP" value="<%= THUOC.GIANHAP %>">
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <label class="text-success" for="DANGBAOCHE">Dạng bảo chế</label>
                    <input class="form-control" type="text" name="DANGBAOCHE" value="<%= THUOC.DANGBAOCHE %>">
                </div>
                <div class="col-md-6">
                    <label class="text-success" for="QCDONGGOI">Quy cách đóng gói</label>
                    <input class="form-control" type="text" name="QCDONGGOI" value="<%= THUOC.QCDONGGOI %>"
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-12">
                    <label class="text-success" for="CONGDUNG">Công dụng</label>
                    <input class="form-control" type="text" name="CONGDUNG" value="<%= THUOC.CONGDUNG %>">
                </div>
            </div>
            <!-- <div class="row mb-2">
                <div class="col-md-6">
                    <label class="text-success" for="profile_pic">Select your profile picture:</label>
                    <input class="form-control" type="file" name="profile_pic">
                </div>
                <div class="col-md-6">
                    <label class="text-success" for="pic">Select multiple images:</label>
                    <input class="form-control" type="file" name="pic" multiple />
                </div>
            </div> -->
            <input class="form-control" type="submit" value="Sửa" style="margin: 10px auto; max-width: 50%;">
        </div>
    </form>
    <div class="foot">
        <%- include('../views/footer.ejs') %>
    </div>
</body>

</html>